---
import Header from "../components/Header.astro";
import { supabase } from "../utils/supabase";

const { cookies, redirect } = Astro;

const accessToken = cookies.get("accessToken");
const refreshToken = cookies.get("refreshToken");

if (accessToken || refreshToken) {
    const { data: userAuth, error: userAuthError } =
        await supabase.auth.getUser(accessToken?.value);

    console.log(userAuth.user?.role);

    // to wyjebie error jak uzytkownik nie ma odswierzonego jwt
    // the responose was already sent
    // ni chuja chce mi sie tego moze kiedys
    // ale zabezpieczenie dziala B)
    // TODO:
    // - fix whats above
    if (userAuthError) return redirect("/signin");
}

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400..700&display=swap"
            rel="stylesheet"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <div class="">
            <div class="w-full h-screen bg-mainBg fixed -z-10"></div>
            <Header />
            <slot />
        </div>
    </body>
</html>
